<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gmail.webos21.radio.ChAddActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/pb_home_hmargin"
            android:paddingTop="@dimen/pb_home_vmargin"
            android:paddingRight="@dimen/pb_home_hmargin"
            android:paddingBottom="@dimen/pb_home_vmargin">

            <Button
                android:id="@+id/btn_save"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="20dip"
                android:text="@string/che_add"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                style="@style/PreferenceCategoryLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6">

                <EditText
                    android:id="@+id/ed_freq"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:digits="0123456789.,"
                    android:hint="@string/chh_freq"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:textSize="18sp" />

                <TextView
                    style="@style/PreferenceCategory"
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:text="@string/che_freq" />

            </LinearLayout>

            <LinearLayout
                style="@style/PreferenceCategoryLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6">

                <EditText
                    android:id="@+id/ed_name"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:hint="@string/chh_name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="18sp" />

                <TextView
                    style="@style/PreferenceCategory"
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:text="@string/che_name" />

            </LinearLayout>

            <LinearLayout
                style="@style/PreferenceCategoryLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6">

                <EditText
                    android:id="@+id/ed_purl"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:hint="@string/chh_purl"
                    android:inputType="textUri"
                    android:maxLines="1"
                    android:textSize="18sp" />

                <TextView
                    style="@style/PreferenceCategory"
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:text="@string/che_purl" />

            </LinearLayout>

            <LinearLayout
                style="@style/PreferenceCategoryLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6">

                <EditText
                    android:id="@+id/ed_lurl"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:hint="@string/chh_lurl"
                    android:inputType="textUri"
                    android:maxLines="1"
                    android:textSize="18sp" />

                <TextView
                    style="@style/PreferenceCategory"
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:text="@string/che_lurl" />

            </LinearLayout>

            <LinearLayout
                style="@style/PreferenceCategoryLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6">

                <TextView
                    style="@style/PreferenceCategory"
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:text="@string/che_regday" />

                <TextView
                    android:id="@+id/tv_regdate"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:hint="@string/chh_regday"
                    android:maxLines="1"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/panel_fixday"
                style="@style/PreferenceCategoryLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6">

                <TextView
                    style="@style/PreferenceCategory"
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:text="@string/che_fixday" />

                <TextView
                    android:id="@+id/tv_fixdate"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:hint="@string/chh_regday"
                    android:maxLines="1"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                style="@style/PreferenceCategoryLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6">

                <EditText
                    android:id="@+id/ed_memo"
                    android:layout_width="0dip"
                    android:layout_height="100dip"
                    android:layout_weight="4"
                    android:hint="@string/chh_memo"
                    android:inputType="textMultiLine"
                    android:maxLength="2000"
                    android:minLines="3"
                    android:textSize="18sp" />

                <TextView
                    style="@style/PreferenceCategory"
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:text="@string/che_memo" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/panel_id"
                style="@style/PreferenceCategoryLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6">

                <TextView
                    style="@style/PreferenceCategory"
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:text="@string/che_id" />

                <TextView
                    android:id="@+id/tv_id"
                    style="@style/PreferenceCategory"
                    android:layout_width="0dip"
                    android:layout_weight="4"
                    android:hint="@string/chh_id"
                    android:text="" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/lbl_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/che_title_add"
        android:textColor="@color/colorPrimaryText"
        android:textSize="30sp"
        android:textStyle="bold" />

</LinearLayout>
